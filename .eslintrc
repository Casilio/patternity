{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true
    },
    "settings": {
        "ecmascript": 6,
        "jsx": true
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "strict": 0,
        "quotes": [2, "single"],
        "no-trailing-spaces": [2, { "skipBlankLines": false }],
        "no-unused-vars": 0,
        "camelcase": 0,
        "indent": [2, 2],
        "key-spacing": [2, {
          "beforeColon": false,
          "afterColon": true,
          "mode": "minimum"
        }],
        "space-before-function-paren": [2, "never"],
        "space-before-blocks": [2, "always"],
        "space-after-keywords": [2, "always"],

        "react/no-multi-comp": 2
    }
}
